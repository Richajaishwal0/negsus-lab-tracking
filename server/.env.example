# Example Environment Variables for Backend
# Copy this file to .env.production or .env.development and modify as needed

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# MongoDB Container Configuration
MONGO_INITDB_ROOT_USERNAME=mongoadmin
MONGO_INITDB_ROOT_PASSWORD=your_strong_mongodb_password_here
MONGO_DB_NAME=negsus_lab_prod

# MongoDB Connection URI (for backend application)
MONGODB_URI=mongodb://mongoadmin:secret@mongodb:27017/negsus_lab_prod
#MONGODB_URI=mongodb://mongoadmin:secret@localhost:27018/negsus_lab_dev


# Firebase Admin (add your actual service account key path)
FIREBASE_SERVICE_ACCOUNT_PATH=./config/serviceAccountKey.json

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://localhost:3000

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (if used)
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your-smtp-password

# Application Configuration
APP_NAME=Negces Lab Tracking API
API_VERSION=v1

# Debug Mode (development only)
DEBUG=false 
